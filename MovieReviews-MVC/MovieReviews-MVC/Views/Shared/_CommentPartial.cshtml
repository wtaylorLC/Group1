@using System.Web.Mvc.Html
@model ICollection<MovieReviews_MVC.Models.ViewModels.CommentsViewModel>

<div class="container mt-3 ">
  @foreach (var commentBlock in Model)
  {
    <div class="row pt-3 mx-0">
      @Html.Partial("_CommentCard", commentBlock.ParentComment)

      @foreach (var reply in commentBlock.ChildComments)
      {
        <div class="container ml-5">
          @Html.Partial("_CommentCard", reply)
        </div>
      }
    </div>
  }
</div>
