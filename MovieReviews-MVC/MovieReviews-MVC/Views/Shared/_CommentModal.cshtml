@model MovieReviews_MVC.Models.ViewModels.CommentModalViewModel
<div class="modal fade" id="add-comment-modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Add Comment</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        @using (Ajax.BeginForm("AddComment", "Comment", new AjaxOptions { HttpMethod = "POST", OnSuccess = "addCommentSuccess(data, status, xhr)", OnFailure = "addCommentFailure" }))
        {
          @Html.AntiForgeryToken()
          @Html.TextAreaFor(Model => Model.CommentBody)

          @Html.HiddenFor(Model => Model.PostId)
          @Html.HiddenFor(Model => Model.CommentParentId)


          <div class="modal-footer">
            <input type="submit" value="Add Comment" class="btn btn-primary" />
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          </div>
        }


      </div>

    </div>
  </div>
</div>